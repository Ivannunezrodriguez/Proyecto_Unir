@startuml
class User {
  +Id_User : UUID
  +Name : String
  +Email : String
  +Password : String
  +Registration_Date : DateTime
}

class VideoGame {
  +Id_VideoGame : UUID
  +Title : String
  +Description : String
  +Release_Date : DateTime?
  +Developer : String
  +Platform : String
  +Rating : Float
  +Id_Category : UUID?
  +CoverUrl : String
}

class Category {
  +Id_Category : UUID
  +Name : String
}

class Review {
  +Id_Review : UUID
  +Id_User : UUID
  +Id_VideoGame : UUID
  +Comment : String
  +Rating : Float
  +Date : DateTime
}

class Recommendation {
  +Id_Recommendation : UUID
  +Id_User : UUID
  +Id_VideoGame : UUID
  +Reason : String
  +Date : DateTime
}

class Purchase {
  +Id_Purchase : UUID
  +Id_User : UUID
  +Id_VideoGame : UUID
  +Store : String
  +Price : Float
  +Link : String
}

class PlayedGame {
  +Id_Played_Game : UUID
  +Id_User : UUID
  +Id_VideoGame : UUID
  +Played_At : DateTime
}

User "1" -- "0..*" Review
User "1" -- "0..*" Recommendation
User "1" -- "0..*" Purchase
User "1" -- "0..*" PlayedGame
Category "1" -- "0..*" VideoGame
VideoGame "1" -- "0..*" Review
VideoGame "1" -- "0..*" Recommendation
VideoGame "1" -- "0..*" Purchase
VideoGame "1" -- "0..*" PlayedGame
@enduml
